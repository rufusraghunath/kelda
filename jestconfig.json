{
  "preset": "ts-jest",
  "testRegex": "test\\.ts?$",
  "moduleFileExtensions": ["ts", "js", "json", "node"],
  "setupFilesAfterEnv": ["<rootDir>/setupTests.ts"],
  "collectCoverageFrom": [
    "src/**/*.{ts,js}",
    "!src/index.ts",
    "!src/dom-mocks/**/*",
    "!src/util/test/**/*",
    "!src/**/*.d.ts"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 85,
      "functions": 90,
      "lines": 90,
      "statements": 90
    }
  }
}
